<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="464.0" prefWidth="666.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.church_project.controllers.AuthController">

   <!-- Sidebar bleu -->
   <VBox prefHeight="464.0" prefWidth="215.0" style="-fx-background-color: #3185FC;" />

   <!-- Titre principal -->
   <Label layoutX="300.0" layoutY="41.0" styleClass="header-title" text="Connectez-vous">
      <font>
         <Font name="System Bold" size="23.0" />
      </font>
   </Label>

   <!-- Section Identifiant -->
   <Label layoutX="301.0" layoutY="133.0" styleClass="input-label" text="Nom d'utilisateur" />
   <TextField fx:id="usernameTextField" layoutX="301.0" layoutY="154.0" prefHeight="26.0" prefWidth="254.0" promptText="Saisissez votre identifiant" styleClass="text-field" />

   <!-- Section Mot de passe -->
   <Label layoutX="301.0" layoutY="199.0" styleClass="input-label" text="Mot de passe" />
   <PasswordField fx:id="passwordTextField" layoutX="301.0" layoutY="223.0" prefHeight="26.0" prefWidth="254.0" promptText="Saisissez votre mot de passe" styleClass="password-field" />

   <!-- Section inscription -->
   <Label layoutX="299.0" layoutY="305.0" styleClass="info-text" text="Pas encore inscrit ? " />
   <Hyperlink layoutX="465.0" layoutY="302.0" onAction="#switchToRegister" styleClass="hyperlink" text="Inscrivez-vous" />

   <!-- Bouton de connexion -->
   <Button layoutX="471.0" layoutY="350.0" mnemonicParsing="false" onAction="#onLoginButton" styleClass="primary-button" text="Connexion" />
   <Button layoutX="312.0" layoutY="350.0" mnemonicParsing="false" onAction="#onLoginButton" styleClass="primary-button" text="Annuler" />

</AnchorPane>
